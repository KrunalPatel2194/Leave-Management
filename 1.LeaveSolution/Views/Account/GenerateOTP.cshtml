        $("#btnSubmit").click(function () {
            $("#loader").show();
            var url = '@Url.Content("~/")' + "Account/GetMobileno";
            var empid = "#EmployeeID";
            var lang = localStorage.getItem("language");
            $.ajax({
                type: 'POST',
                url: url,
                data: { employeeid: $.trim($(empid).val())},
                dataType: "json",
