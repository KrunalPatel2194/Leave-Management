        $("#loader").show();
        $("#EmployeeID").val("");
        $('#EmployeeDOB').inputmask('dd-mm-yyyy', { 'placeholder': 'dd-mm-yyyy' })
        $('#EmployeeDOB').datepicker({
            format: 'dd-mm-yyyy',
            autoclose: true
